<view class="">
  <view bindtap='clickImage'>
      <image lazy-load="true" style="width: 100%" mode="scaleToFill" src="{{detailInfo.coverImage}}"></image> 
  </view>

  <view class="text-container" style="padding: 0rpx 20rpx; background-color: white">
      <view>{{detailInfo.name}}</view>
      <view class="font-small"><b>距离：</b><span>0.3km</span></view>
      <view class="font-small"><b>位置：</b><span>{{detailInfo.location}}</span></view>
  </view>
</view>
