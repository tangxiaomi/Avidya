<view class="attraction-des-container">
  <view>
    <attractionView coverImage="{{selectedAttration.coverImage}}" name="{{selectedAttration.name}}"></attractionView>
  </view> 

  <view wx:for="{{attractions}}" wx:key="item.name" class="attraction-des">
    <listItem coverImage="{{item.coverImage}}" dataSource="{{item}}" name="{{item.name}}" bind:clickItem="onClickAttraction">
    </listItem>  
  </view> 
  
</view>
