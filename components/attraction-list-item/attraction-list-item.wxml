<view class="component-style">
  <text>{{name}}</text>
  <view class="img-container" bindtap='clickImage'>
    <image clas="img" mode="aspectFit" wx:if="{{coverImage !== '/'}}"
      src="{{coverImage}}"></image> 
    <view wx:else class="update"> 更新ing </view>
  </view>
  <view class="text-container">
    <view class="collection" wx:if="{{coverImage !== '/'}}">
      <view bindtap='clickCollection'>
       <image src="../../assets/images/noCollection.png" wx:if="{{collection === false}}"></image>
       <image src="../../assets/images/collection.png" wx:else></image>
      </view>
    </view>
    <view wx:if="{{coverImage !== '/'}}" class="location">距离：{{distance}}</view> 
  </view>
</view>
