/* component/attraction-list-Item/attraction-list-Item.wxss */
.component-style{
  margin: 0 10px;
  padding-bottom: 10px;
}
.img-container{
  /* height: 160px; */
  border-bottom: 1px solid #ddd;
  box-sizing: border-box;
  border-radius: 3px;
  position: relative;
}

.img-container image{
  margin-top: 10px;
  width: 100%;
  height: 240px;
}
.update{
  width: 100%;
  height: 240px;
  box-sizing: border-box;
  padding-top: 100px;
  font-weight: 500px;
  text-align: center;
}

.text-color{
  color: #fff;
}

.text-container {
 display: flex;
 padding-top:10px;
 box-sizing: border-box;
 justify-content: flex-end;
 color: black;
 font-size: 15px;
}
 .collection,
.location{
 align-items: center;
  margin-right: 10px;
} 

.collection image,
.like image{
  height: 25px;
  width: 25px;
}